<Window x:Class="WpfClient.Views.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfClient.Views"
        mc:Ignorable="d"
        Title="ShellView" Height="450" Width="800">

    <Window.Resources>
        <ResourceDictionary Source="/Resources/MenuStyles.xaml" />
    </Window.Resources>
    
    <Grid>

        <DockPanel>

       
            <!-- Status bar -->            
            <Border
                Height="50"
                DockPanel.Dock="Bottom"
                Background="Orange" />


            <!-- Main menu -->

            <Menu DockPanel.Dock="Top"
                      Padding="20">

                <Menu.Resources>
                   
                </Menu.Resources>

                <MenuItem Header="Home"  />
                <MenuItem Header="Dashboard"  />
                <MenuItem Header="Counters"   />
                <MenuItem Header="Products" />
                <MenuItem Header="Customers" />
                <MenuItem Header="Settings" />
                <MenuItem Header="Help" Style="{StaticResource HelpMenuItem}"
                          />
            </Menu>

            <!-- Side bar -->
            <Menu 
                DockPanel.Dock="Left"
                Width="200"
                Padding="20">

                <MenuItem Header="Home" />

                <MenuItem Header="Dashboard" />

                <MenuItem Header="Counters" />

                <MenuItem Header="Products" />


                <MenuItem Header="Customers" />

                <MenuItem Header="Settings" />

                <MenuItem Header="Help" Style="{StaticResource HelpMenuItem}"
                          />



            </Menu>

            <!-- Header -->
            <StackPanel
                        Visibility="Collapsed"
                        DockPanel.Dock="Top"
                        Orientation="Horizontal"
                        Height="100" >

                <Button>About</Button>
                <Button>Visit Website</Button>

            </StackPanel>

            <!-- Content -->

            <Frame Source="CounterView.xaml" />



        </DockPanel>
        
    </Grid>
    
</Window>
