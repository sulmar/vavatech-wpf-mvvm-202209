                                TitleForeground="DarkViolet"
                                Quantity="{Binding Tasks}"
                                />

                <uc:CardControl Title="PENDING DOCUMENTS:" Icon="{StaticResource DocumentsImage}"
                                TitleForeground="OrangeRed"
                                Quantity="{Binding PendingDocuments}"
                                />


