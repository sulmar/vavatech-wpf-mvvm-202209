<Window x:Class="Fundamentals._03_LayoutControls.StackPanelView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fundamentals._03_LayoutControls"
        mc:Ignorable="d"
        Title="StackPanelView" Height="450" Width="800">
    
    <StackPanel Orientation="Horizontal">

        <Border  
            Margin="10"
            Width="200"
            Background="Yellow" />

        <Border                      
            Width="200"
            Background="Green" />

        <Border          
            Width="200"
            Background="Red" />
        
        <Border         
            Width="400"
            Height="200"         
            VerticalAlignment="Bottom"
            Background="Blue" />
                              
    </StackPanel>
    
</Window>
